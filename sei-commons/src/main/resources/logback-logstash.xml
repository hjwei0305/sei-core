<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

    <!-- 应用服务名称 -->
    <springProperty scope="context" name="serviceName" source="spring.application.name"/>
    <springProperty scope="context" name="remoteHost" source="sei.log.remote.host"/>

    <!-- %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %n -->
    <!-- %date{HH:mm:ss.SSS} %-5level [%X{traceId}] [%thread] %logger#%line %X{req.requestURI} %msg\n\r -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{HH:mm:ss.SSS}){faint} %clr(%5p) %clr(${PID:- }){magenta} %clr([%15.15t]){faint} %clr(%-40.40logger{39}#%-4line){cyan} %clr(:){faint} %m%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <!--<charset>utf8</charset>-->
        </encoder>
    </appender>

    <!--    <springProfile name="dev,test">-->

    <!--    </springProfile>-->

    <!--    <springProfile name="!dev">-->

    <!--    </springProfile>-->

<!--    <appender name="LOG_STASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">-->
    <appender name="LOG_STASH" class="com.changhong.sei.core.log.LogstashAppender">
        <!-- logstash服务器地址 端口-->
<!--        <destination>${sei.log.remote.host}</destination>-->
        <destination>10.4.208.132:5044</destination>
        <!-- 请求者信息字段 打开有性能影响 -->
        <includeCallerData>false</includeCallerData>

        <encoder charset="UTF-8" class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <pattern>
                    <pattern>
                        {
                            "userId": "%X{userId}",
                            "account": "%X{account}",
                            "userName": "%X{userName}",
                            "tenantCode": "%X{tenantCode}",
                            "accessToken": "%X{accessToken}",

                            "classMethod": "%X{classMethod}",
                            "args": "%X{args}",

                            "timestamp":"%d{yyyy-MM-dd HH:mm:ss.SSS}",
                            "trace_id": "%X{trace_id}",
                            "version": "sei-${sei-version:-}",
                            "level": "%level",
                            "hostName": "${HOSTNAME:-}",
                            "serviceName": "${serviceName:-}",
                            "pid": "${PID:-}",
                            "thread": "%thread",
                            "logger": "%logger",
                            "message": "%message",
                            "stack_trace": "%exception"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <keepAliveDuration>5 minutes</keepAliveDuration>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOG_STASH"/>
    </root>

    <!-- additivity="true" 是否重复记录 -->
    <!-- 3rd party Loggers -->
    <!-- spring -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.jboss.logging" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.elasticsearch" level="WARN"/>
    <logger name="org.mongodb" level="WARN"/>
    <logger name="io.lettuce" level="WARN"/>
    <!-- swagger log configure -->
    <logger name="io.swagger" level="WARN"/>
    <!-- kafka log configure -->
    <logger name="org.apache.kafka" level="WARN"/>
    <!-- cxf log configure -->
    <logger name="org.apache.cxf" level="ERROR"/>
    <!-- thymeleaf log configure -->
    <logger name="org.thymeleaf" level="WARN"/>
    <!-- redisson log configure -->
    <logger name="org.redisson" level="WARN"/>
    <!--<logger name="io.netty.util.internal" level="WARN"/>-->
    <logger name="io.netty" level="WARN"/>
    <logger name="druid" level="WARN"/>
    <logger name="com.alibaba" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.apache.curator.framework" level="ERROR"/>

    <logger name="org.apache.catalina.startup.DigesterFactory" level="ERROR"/>
    <logger name="org.apache.catalina.util.LifecycleBase" level="ERROR"/>
    <logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
    <logger name="org.apache.sshd.common.util.SecurityUtils" level="WARN"/>
    <logger name="org.apache.tomcat.util.net.NioSelectorPool" level="WARN"/>
    <logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="ERROR"/>
    <logger name="org.hibernate.validator.internal.util.Version" level="WARN"/>


</configuration>
